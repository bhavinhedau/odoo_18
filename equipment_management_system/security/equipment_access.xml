<odoo>
<!--    Equipment rights start-->
    <record id="module_equipment_management_category" model="ir.module.category">
        <field name="name">Equipment Management</field>
        <field name="description">Access rights related to equipment management system.</field>
        <field name="sequence">1</field>
    </record>
    <record model="res.groups.privilege" id="equipment_management_privilege">
        <field name="name">Equipment Management Privilege</field>
        <field name="category_id" ref="equipment_management_system.module_equipment_management_category"/>
        <field name="sequence">1</field>
    </record>
    <record id="group_equipment_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="equipment_management_system.equipment_management_privilege"/>
        <field name="comment">Users in this group have access to every equipment management model.</field>
    </record>
    <record id="group_equipment_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="equipment_management_system.equipment_management_privilege"/>
        <field name="comment">Users in this group have access to only equipment master.</field>
    </record>
    <record id="group_equipment_viewer" model="res.groups">
        <field name="name">Viewer</field>
        <field name="privilege_id" ref="equipment_management_system.equipment_management_privilege"/>
        <field name="comment">Users in this group only have access to view.</field>
    </record>
<!--    End-->

