                <field name="packaging_fees_for_returns"/>
                <field name="special_packaging_fees_for_returns"/>
                <field name="payment_collection_fees_for_returns"/>
                <field name="logistics_fees_for_returns"/>
                <field name="reverse_logistics_fees_for_returns"/>
                <field name="service_tax"/>
                <field name="swachh_bharat_cess"/>
                <field name="krishi_kalyan_cess"/>
                <field name="sgst"/>
                <field name="cgst"/>
                <field name="utgst"/>
                <field name="igst"/>
                <field name="commission"/>
                <field name="netpayable"/>
                <field name="payment_date"/>
                <field name="settlement_ref_id"/>
                <field name="order_creation_date"/>
