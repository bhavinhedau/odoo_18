                <field name="fulfilment_mode"/>
                <field name="customer_name"/>
                <field name="customer_city"/>
            </list>
        </field>
    </record>

    <record id="snapdeal_payment_action" model="ir.actions.act_window">
        <field name="name">Snapdeal Report</field>
        <field name="res_model">snapdeal.payment.report</field>
        <field name="view_mode">list,form</field>
    </record>
        <menuitem id="report_id" name="Snapdeal Report" action="snapdeal_payment_action"/>

</odoo>