<odoo>
    <record id="snapdeal_payment_view_form" model="ir.ui.view">
        <field name="name">snapdeal.payment.report.view.form</field>
        <field name="model">snapdeal.payment.report</field>
        <field name="arch" type="xml">
            <form string="Snapdeal Payment Report Form">
                <sheet>
                    <group>
                        <group>
                            <field name="transaction_date"/>
                            <field name="seller_code"/>
                            <field name="type"/>
                            <field name="transaction_id"/>
                            <field name="reason"/>
                            <field name="name"/>
                            <field name="sku"/>
                            <field name="invoice_number"/>
                            <field name="web_sale_price"/>
                            <field name="payment_received_by_snapdeal"/>
                            <field name="seller_funded_cashback"/>
                            <field name="cash_discount"/>
                            <field name="cash_discount_adjustment"/>
                            <field name="benefit_passed_on_to_buyer"/>
                            <field name="emi"/>
                            <field name="subvention_charges"/>
                            <field name="fulfillment_fee"/>
                            <field name="fulfillment_fee_waiver"/>
                            <field name="processing_charges"/>
                            <field name="packaging_charges"/>
                            <field name="special_packaging_charges"/>
                            <field name="marketing_fee"/>
                            <field name="closing_fee"/>
                            <field name="payment_collection_fee"/>
                            <field name="courier_fee"/>
                        </group>
                        <group>
                            <field name="fulfilment_fees_for_returns"/>
                            <field name="processing_fees_for_returns"/>
                            <field name="packaging_fees_for_returns"/>
                            <field name="special_packaging_fees_for_returns"/>
                            <field name="payment_collection_fees_for_returns"/>
                            <field name="logistics_fees_for_returns"/>
                            <field name="reverse_logistics_fees_for_returns"/>
                            <field name="service_tax"/>
                            <field name="swachh_bharat_cess"/>
                            <field name="krishi_kalyan_cess"/>
                            <field name="sgst"/>
                            <field name="cgst"/>
                            <field name="utgst"/>
                            <field name="igst"/>
                            <field name="commission"/>
                            <field name="netpayable"/>
                            <field name="payment_date"/>
                            <field name="settlement_ref_id"/>
                            <field name="order_creation_date"/>
                            <field name="delivered_date"/>
                            <field name="awb_number"/>
                            <field name="shipped_return_date"/>
                            <field name="courier_name"/>
                            <field name="fulfilment_mode"/>
                            <field name="customer_name"/>
                            <field name="customer_city"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="snapdeal_payment_view_list" model="ir.ui.view">
        <field name="name">snapdeal.payment.report.view.list</field>
        <field name="model">snapdeal.payment.report</field>
        <field name="arch" type="xml">
            <list string="Snapdeal Payment Report List">
                <field name="transaction_date"/>
                <field name="seller_code"/>
                <field name="type"/>
                <field name="transaction_id"/>
                <field name="reason"/>
                <field name="name"/>
                <field name="sku"/>
                <field name="invoice_number"/>
                <field name="web_sale_price"/>
                <field name="payment_received_by_snapdeal"/>
                <field name="seller_funded_cashback"/>
                <field name="cash_discount"/>
                <field name="cash_discount_adjustment"/>
                <field name="benefit_passed_on_to_buyer"/>
                <field name="emi"/>
                <field name="subvention_charges"/>
                <field name="fulfillment_fee"/>
                <field name="fulfillment_fee_waiver"/>
                <field name="processing_charges"/>
                <field name="packaging_charges"/>
                <field name="special_packaging_charges"/>
                <field name="marketing_fee"/>
                <field name="closing_fee"/>
                <field name="payment_collection_fee"/>
                <field name="courier_fee"/>
                <field name="fulfilment_fees_for_returns"/>
